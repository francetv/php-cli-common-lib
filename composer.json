{
    "name": "ftven/common-lib",
    "description": "Common classes/services",
    "keywords": ["ftven", "common"],
    "homepage": "https://github.com/francetv/php-common-lib",
    "require": {
        "php": ">= 5.4.4",
        "symfony/filesystem": "2.5.*",
        "symfony/console": "2.5.*",
        "symfony/finder": "2.5.*",
        "symfony/yaml": "2.5.*",
        "symfony/process": "2.5.*",
        "guzzlehttp/guzzle": "4.*",
        "herrera-io/phar-update": "2.*",
        "twig/twig" : "1.15.*",
        "swiftmailer/swiftmailer": "5.2.*"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*",
        "squizlabs/php_codesniffer": "1.*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Olivier Hoareau",
            "email": "olivier@phppro.fr",
            "homepage": "http://www.phppro.fr",
            "role": "Lead Developer"
        }
    ],
    "support": {
        "email": "olivier@phppro.fr"
    },
    "minimum-stability": "stable",
    "suggest": {
        "ftven/cli-common": "Build CLI Tools"
    },
    "autoload": {
        "psr-4": {
            "Ftven\\Build\\Common\\": "src/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    }
}
